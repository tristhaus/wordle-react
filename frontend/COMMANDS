# auditing to get fewer false positives
frontend $ npm audit --only=prod

# to run the frontend test just once, and not in watch mode
CI=true npm test

# for e2e test - run three shells
backend $ npm run start:test
frontend $ npm start
frontend $ npm run cypress:open

# for deploying to backend
frontend $ npm build && rm -r ../backend/build/ && cp -r build ../backend/

# in valid heroku app repo
heroku config:set KEY=value

# in root dir - deploy app to heroku
# be sure to have committed the build dir
git subtree push --prefix backend/ heroku main

